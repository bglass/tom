<h1>Listing components</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Abstract</th>
    <th>Activity</th>
    <th>Sizex</th>
    <th>Sizey</th>
    <th>Technology</th>
    <th>Status</th>
    <th>Qlevel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= component.title %></td>
    <td><%= component.category_id %></td>
    <td><%= component.abstract %></td>
    <td><%= component.activity_id %></td>
    <td><%= component.sizex %></td>
    <td><%= component.sizey %></td>
    <td><%= component.technology_id %></td>
    <td><%= component.status %></td>
    <td><%= component.qlevel %></td>
    <td><%= link_to 'Show', component %></td>
    <td><%= link_to 'Edit', edit_component_path(component) %></td>
    <td><%= link_to 'Destroy', component, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

