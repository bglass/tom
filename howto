rails generate scaffold Entity 	    name:string description:string city:string country:string url:string
rails generate scaffold Contractor  activity_id:integer entity_id:integer role:string
rails generate scaffold Category    name:string abstract:string
rails generate scaffold Component   title:string category_id:integer abstract:string activity_id:integer technology_id:integer status:string qlevel_id:integer
rails generate scaffold Qlevel      name:string description:string
rails generate scaffold Technology  entity_id:integer type:string size:float name:string
rails generate scaffold Phase	    name:string activity_id:integer description:string
rails generate scaffold Milestone   title:string phase_id:integer achieved:boolean
rails generate scaffold Deliverable title:string number:string milestone_id:integer status:string accepted:boolean
rails generate scaffold Payment     milestone_id:integer amount:integer invoiced:boolean paid:boolean
rails generate scaffold Meeting     title:string venue:string milestone_id:integer minutes
rails generate scaffold Stamp	    stampable_id:integer stampable_type:string planned:date estimated:date actual:date
rails generate scaffold Info	    informable_id:integer informable_type:string title:string text:string url:string
rails generate scaffold MonthlyReport  activity_id:integer text:string final:boolean
rails generate scaffold Action	    activity_id:integer assignee_id:integer title:string due:date closed:date

