rails generate controller Pages tables

rails generate scaffold Activity title:string nickname:string abstract:string contract:string funding_id:integer funding_amount:integer startdate_id:integer enddate_id:integer project_id:integer

rails generate scaffold  KeyPerson   activity_id:integer person_id:integer role:string
rails generate scaffold  Deliverable title:string number:string activity_id:integer milestone_id:integer status:string accepted:boolean
rails generate scaffold Meeting     title:string venue:string stamp_id:integer activity_id:integer milestone_id:integer # number:integer 
rails generate scaffold Milestone   title:string activity_id:integer achieved:boolean stamp_id:integer   # ccn_id:integer 
rails generate scaffold Payment     milestone_id:integer amount:integer invoiced:boolean paid:boolean stamp_id:integer
rails generate scaffold Contractor  activity_id:integer entity_id:integer
rails generate scaffold Comment     activity_id:integer title:string text:string
rails generate scaffold Reference   activity_id:integer title:string url:string
rails generate scaffold Project     title:string abstract:string person_id:integer
rails generate scaffold Funding     title:string abstract:string
rails generate scaffold Person      first:string last:string section:string role:string
rails generate scaffold Component   title:string category_id:integer abstract:string activity_id:integer technology_id:integer status:string qlevel:string # sizex:float sizey:float 

rails generate scaffold Category    categorytype:string abstract:string
rails generate scaffold Technology  entity_id:integer type:string size:float name:string
rails generate scaffold Entity 	    name:string description:string city:string country:string url:string
rails generate scaffold Stamp	    planned:date estimated:date actual:date

